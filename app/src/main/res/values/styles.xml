<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="BlackText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RedText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BlackTextButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RedTextButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">13sp</item>
    </style>



</resources>
